<div class="modal fade" id="signInModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
      	<div class="close-login-form">x</div>
          <img class="img-responsive centre-content" src="<%= asset_path('home/schloop.png') %>">

          <div id="loginDiv" class="mt30" >
            <%= form_tag '/users/sign_in', method: :post, id:"login-form", novalidate:true do %>
                <div class="form-group">
                  <input type="email" class="form-control input-field" required name="user[email]" autocomplete="off" placeholder="Email Address" maxlength="40" />
                </div>
                <div class="form-group">
                  <input type="password" class="form-control input-field" required name="user[password]" autocomplete="off" placeholder="Password"  maxlength="12" />
                </div>
                <div>
                  <label id="labelForgotPassword" class="text-color btn btn-link pl0" data-teacher_login="true">Forgot Password</label>
                </div>
                <p class="show_err"></p>
                <div class="form-group mt20">
                  <button type="submit" class="btn btn-primary btn-full-width text-uppercase">sign in</button>
                </div>
            <% end %>
          </div>

          <div id="forgotPasswordDiv" class="hidden mt30" >
            <%= form_tag 'password_resets/create' , id:"forgot-password-form", novalidate:true do %>
                <input type="hidden" name="user_type" value="SchoolAdmin">
                <div class="form-group">
                  <input type="email" class="form-control input-field" required name="email" autocomplete="off" placeholder="Email Address"  maxlength="40" />
                </div>
                <p class="show_error"></p>
                <div class="form-group mt50">
                  <button type="submit" class="btn btn-primary btn-full-width text-uppercase"> send a rest password link </button>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
