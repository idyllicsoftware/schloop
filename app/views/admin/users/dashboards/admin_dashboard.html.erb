<h1>Admin Dashboard</h1>
&nbsp&nbsp&nbsp<button class="btn btn-primary" id="create-school-btn">Create School</button><br><br>
&nbsp&nbsp&nbsp<a href='/users/sign_out'>sign out</a>

<div class="modal fade" id="create-school-modal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-body">
				<div class="schools-input-form">
					<form class="schools-registraion-form">
						<div class="form-group">
						  <label>School name</label>	
				          <input type="text" class="form-control input-field" required name="name" autocomplete="off">
				        </div>

				        <div class="form-group">
				          <label>Address</label>	
				          <input type="text" class="form-control input-field" required name="address1" autocomplete="off">
				          <input type="text" class="form-control input-field" name="address2" autocomplete="off">
				        </div>
						<div class="sub-input-field">
				        <div class="form-group">
				          <label>Zip code</label>	
				          <input type="text" class="form-control input-field line-fix" required name="zip_code" autocomplete="off">
			        	</div>

			    	    <div class="form-group">
			    	      <label>Phone</label>	
			        	  <input type="text" class="form-control input-field line-fix" required name="phone_number" autocomplete="off">
			        	</div>

			        	<div class="form-group">
			        	  <label>Phone(Alternate)</label>	
			        	  <input type="text" class="form-control input-field line-fix" name="alternate_number" placeholder="Optional" autocomplete="off">
			            </div>
			            </div>

				        <label>Contact Person(Optional)</label>
			            <div class="sub-input-field">		
				        	<div class="form-group">			        	  	
				        	  <input type="text" class="form-control input-field line-fix" required name="first_name" placeholder="First name" autocomplete="off">
				        	</div>  
				        	<div class="form-group">			        	  	
				        	  <input type="text" class="form-control input-field line-fix" required name="last_name" placeholder="Last name" autocomplete="off">
				        	</div>
				        	<div class="form-group">			        	  	  
				        	  <input type="text" class="form-control input-field line-fix" required name="role" placeholder="Role" autocomplete="off">
				            </div>
			            </div>
			            <div></div>
			            <div>
			            	<button type="submit" class="btn btn-primary">ADD SCHOOL</button>
			            	<button class="btn btn-primary cancel-creation">CANCEL</button>
			            </div>			            
					</form>
				</div>				
			</div>
		</div>
	</div>
</div>