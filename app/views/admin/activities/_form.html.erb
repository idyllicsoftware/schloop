 <div class="modal fade" id="create-web-content-modal">
   <div class="modal-dialog modal-lg">
     <div class="modal-content">
       <div class="modal-body">
        <%= form_tag '', id:'activity_creation_form', class:"web-content-form" do %>
          <div class="row">
            <div class="form-group col-md-6">
              <select id="grade" name="activity[master_grade_id]" required class="form-control field">
                <option disabled="disabled" selected="selected">Grade</option>
                <% @grades.each do |grade|%>
                    <option value="<%= grade.id %>"><%= grade.name %></option>
                <% end %>
              </select>
            </div>
            <div class="form-group col-md-6">
              <select id="subjects" name="activity[master_subject_id]" required class="form-control field">
                <option disabled="disabled" selected="selected">Subject</option>
                <% @subjects.each do |subject|%>
                    <option value="<%= subject.id %>"><%= subject.name %></option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6">
              <label class="mandatory">Topic</label>
              <input type="text" class="form-control input-field" required name="activity[topic]" autocomplete="off" maxlength="50" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <label class="mandatory">Activity Title</label>
              <input type="text" class="form-control input-field" required name="activity[title]" autocomplete="off" maxlength="50" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6 mb25 mt25">
              <p>Category :</p>
              <select id="select_multiple" multiple name="activity[categories][]" required class="form-control input-field">
                <!-- <option disabled="disabled" value="" selected="selected">Category :</option> -->
                <% @categories.each do |category|%>
                    <option value="<%= category.id %>"><%= category.name %></option>
                <% end %>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <label class="mandatory">Teaches</label>
              <input type="text" class="form-control input-field" name="activity[teaches]" autocomplete="off" maxlength="50" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <label class="mandatory">Pre Requisites</label>
              <textarea class="form-control input-field" name="activity[pre_requisite]" maxlength="1000"></textarea>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <label class="mandatory">Steps to follow</label>
              <textarea class="form-control input-field" name="activity[details]" maxlength="1000"></textarea>
            </div>
          </div>
         <% end %>

         <div id="thumbnailImageUploadSection">
          <form class="fileDetails uploadFiles_btn_container clearfix" style="display: block;">
           <input type="hidden" class="activity_id_hidden_input" name="id" />
           <%= hidden_field_tag :type,  'thumbnail'%>
           <div class="row">
             <div class="form-group col-md-6 image-attach thumb_img">
               <p class="mandatory">Thumbnail Image</p>
               <div class="file_upload_files--upload-block">
                 <div class="fileUpload file_upload_files--fileUploadBtn">
                   <span><i class="fa fa-cloud-upload"></i> choose file</span>
                   <input class="fileuploadInput upload" type="file" name="file" data-url="/admin/activities/upload_file" accept="image/*">
                 </div>
                 <button class="btn btn-primary text-uppercase disabled uploadBtn hidden">upload</button>
                 <div class="progressWrap" style="padding: 15px 0px;display: none;">
                   <div class="progress">
                     <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                       <span></span>
                     </div>
                   </div>
                 </div>
                 <table class="selected_files"></table>
               </div>
               <div class="thumb_img_list"></div>
             </div>
           </div>
         </form>
         </div>

         <div id="referenceImageUploadSection">
            <form class="fileDetails uploadFiles_btn_container clearfix" style="display: block;">
           <input type="hidden" class="activity_id_hidden_input" name="id" />
           <%= hidden_field_tag :type,  'reference'%>
          <div class="row">
            <div class="form-group col-md-6 image-attach ref_img">
              <p class="mandatory">Reference Image</p>
              <div class="file_upload_files--upload-block">
                  <div class="fileUpload file_upload_files--fileUploadBtn">
                    <span><i class="fa fa-cloud-upload"></i> choose file</span>
                    <input class="fileuploadInput upload" type="file" multiple name="file" data-url="/admin/activities/upload_file" accept="image/*">
                  </div>
                  <button class="btn btn-primary text-uppercase disabled uploadBtn hidden">upload</button>
                <div class="progressWrap" style="padding: 15px 0px;display: none;">
                  <div class="progress">
                    <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                      <span></span>
                    </div>
                  </div>
                </div>
                <table class="selected_files"></table>
              </div>
              <div class="ref_img_list"></div>
            </div>
          </div>
         </form>
         </div>
          <div class="action-btn">
            <button id="activitySubmit" type="button" class="btn btn-primary">ADD ACTIVITY</button>
            <button class="btn btn-primary" data-dismiss="modal" aria-label="Cancel">CANCEL</button>
          </div>
      </div>
    </div>
  </div>
</div>
