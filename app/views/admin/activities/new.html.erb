        <%= form_for(@activity, url: create_or_update_admin_activities_path) do |f| %>
          <div class="row">
            <div class="form-group col-md-6">
              <%= select_tag :grades,
                 options_for_select(@grades.map {|g| [g.name, g.id] }, @activity.master_grade_id),
                 name: "activity[master_grade_id]",
                 class: "form-control field",
                 required: true
              %>

            </div>
            <div class="form-group col-md-6">
              <%= select_tag :subjects,
                 options_for_select(@subjects.map {|s| [s.name, s.id] }, @activity.master_subject_id),
                 name: "activity[master_subject_id]",
                 class: "form-control field",
                 required: true
              %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6">
              <label class="mandatory">Topic</label>
              <input type="text" class="form-control input-field" required name="activity[topic]" autocomplete="off" maxlength="50" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <label class="mandatory">Activity Title</label>
              <input type="text" class="form-control input-field" required name="activity[title]" autocomplete="off" maxlength="50" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6">
              <%= select_tag :categories,
                 options_for_select(@categories.map {|s| [s.name, s.id] }, {}),
                 name: "activity[categories]",
                 id: 'select_multiple',
                 class: "form-control input-field",
                 required: true,
                 multiple: 'multiple'
              %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <label class="mandatory">Teaches</label>
              <input type="text" class="form-control input-field" required name="activity[teaches]" autocomplete="off" maxlength="50" />
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <label class="mandatory">Pre Requisites</label>
              <textarea class="form-control input-field" required name="activity[pre_requisites]" maxlength="1000"></textarea>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <label class="mandatory">Steps to follow</label>
              <textarea class="form-control input-field" required name="activity[details]" maxlength="1000"></textarea>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6 image-attach">
              <p class="mandatory">Reference Image</p>
              <label for="upload-photo">
                  <div class="upload-logo">
                    <img src="<%= asset_path('admin/image_upload.svg') %>">
                  </div>
                  <input type="file" name="activity[thumbnail_file]" value="" id="upload-photo"/>
              </label>
              <input class="form-control input-field" disabled="disabled" placeholder="filename">
            </div>
          </div>
          <div class="action-btn">
            <button type="submit" class="btn btn-primary">ADD ACTIVITY</button>
            <button class="btn btn-primary cancel-creation">CANCEL</button>
          </div>
          <% end %>
