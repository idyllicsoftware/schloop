<div class="school-profile-main-section">
  <div class="container">
    <div class="content-wrapper">
      <div class="header-wrapper">
        <div class="home-logo" style="background-image: url('<%= asset_path('school_admin.png') %>');"></div>
        <div class="heading-wrapper">
          <h2><%= @school.name %></h2>
          <p><%= @school.code %></p>
        </div>
      </div>
      <div class="data-wrapper">
        <div class="row mt40">
          <div class="col-md-3">
            <span class="data-title">Board</span>
            <span class="data-attr"><%= @school.board %></span>
          </div>
          <div class="col-md-4 ">
            <span class="data-title">Principle/Director/Authority</span>
            <span class="data-attr"><%= @school.principal_name %></span>
          </div>
          <div class="col-md-4">
            <span class="data-title">Website</span>
            <span class="data-attr"><a href="<%= @school.website %>"><%= @school.website %></a></span>
          </div>
        </div>
        <div class="row mt40">
          <div class="col-md-6">
            <span class="data-title">Address</span>
            <span class="data-attr"><address><%= @school.address %></address></span>
          </div>
          <div class="col-md-2 ">
            <span class="data-title">Zip Code</span>
            <span class="data-attr"><%= @school.zip_code %></span>
          </div>
          <div class="col-md-2">
            <span class="data-title">Phone</span>
            <span class="data-attr"> <%= @school.phone1 %></span>
          </div>
          <div class="col-md-2 last-col">
            <span class="data-title">Phone (Alternate)</span>
            <span class="data-attr"> <%= @school.phone2 %></span>
          </div>
        </div>
        <div class="mt30 admin-detail-section">
          <span class="data-title">School Admin (will get credentials to log into system)</span><br>
          <div class="overflow">
            <table id="schoolAdminContainer" class="admin-data">
            </table>
          </div>
          <div class="mt10">
            <span id="add-admin"><a id="add-school-administrator-popover" data-toggle="popover" data-value="add-school-administrator-popover-content">+Add Another Administrator</a></span>
          </div>
        </div>
      </div>
    </div>
  </div>  
  <div class="container">
    <div class="content-wrapper">
      <div class="tab-wrapper">
        <ul id="myTab" class="nav nav-tabs">
          <li class="active">
            <a href="#grade-sub-tab" aria-controls="grade-sub-tab" role="grade-sub-tab" data-toggle="tab">Grades & Subjects</a>
          </li>
          <li>
            <a href="#teachers-tab" aria-controls="teachers-tab" role="teachers-tab"  data-toggle="tab">Teachers</a>
          </li>
        </ul>
        <div id="myTabContent" class="tab-content">
          <div class="tab-pane fade in active" id="grade-sub-tab">
            <div>
              <div class="add_grade">
                <a id="add-grade-popover" tabindex="0" data-toggle="popover" role="button" data-value="add-grade-popover-content" >+ Add grade</a>
              </div>
            </div>
          <% @grades.each do |grade| %>
            <div class="subject-wrapper">
              <span class="data-title plr20"><%= grade.name %></span>
              <div class="data-attr">
                <div class="subject-tab-wrapper">
                  <ul id="subject-tab" class="nav nav-tabs">
                  <% grade.subject.each do |current_subject| %>
                    <li class="active"><a href="#subject1-tab" data-toggle="tab"><%=current_subject.name %></a></li>
                  <% end %>
                  </ul>
                  <span id="add-sub"><a id="add-subject-popover" data-toggle="popover" data-value="add-subject-popover-content" data-placement="left">+Add Subject</a></span>
                </div>
                <%= render :partial => "admin/schools/add_subjects", locals: {grade: grade} %> 
                <div class="tab-content">
                  <div class="tab-pane fade in active division-wrapper inner-tabs" id="subject1-tab">
                    <div class="plr20"><span class="data-title"><a class="fa fa-chevron-down no-of-div"></a>5 Divisions</span></div>
                    <div class="slide-division-wrapper">
                      <div class="plr20">
                        <ul id="myTab" class="nav nav-tabs division-list">
                          <% grade.division.each do |current_division| %>
                            <li><a href="#div-a" data-toggle="tab"><%= current_division.name %></a></li>
                          <% end %>
                        </ul>
                      </div>
                      <div class="div-operation">
                        <span><a id="add-division-popover" data-toggle="popover" data-value="add-division-popover-content" data-grade_id="<%= grade.id %>">+Add Division</a></span>
                        <span><a href="#">+Delete Division A</a></span>
                        <%= render :partial => "admin/schools/add_divisions", locals: {grade: grade} %> 
                      </div>
                      <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade in active" id="div-a">
                          <div class="teachers-wrapper">
                            <ul>
                              <li><a id="teachers-info-popover" data-toggle="popover" data-value="teachers-info-popover-content" data-trigger="hover"><div><img src="https://dummyimage.com/45x45/2abdda/0011ff&text=dps"><span class="img-caption"><p>Ruchi P.</p>English</span></div></a></li>
                            </ul>
                            <div id="teachers-info-popover-content" class="hidden">
                              <div>
                                <p>Ruchi Patil</p>
