<%
    default_subjects = ['Science', 'English', 'Marathi', 'Geography', 'Hindi',
     'Maths', 'Art', 'Biology', 'History', 'Social Science', 'General Knowledge']
%>

<div id="add-grade-popover-content" class="hidden">
  <form class="form-inline" role="form">
    <div class="form-group col-md-12 ">
      <input type="text" class="form-control input-field" required name="grade_name" placeholder="Name, ex.grade I,grade II" autocomplete="off">
    </div>
    <div class="form-group col-md-12 ">
      <h4>Assign subjects</h4>
      <ul class="checkbox_customized">
        <% default_subjects.each_with_index do |subject, index|%>
          <li class="col-md-4">
            <input type="checkbox" name="subjects[]" value="<%= subject %>" id="<%= "default_subject_#{index}" %>" >
            <label for=""<%= "default_subject_#{index}" %>""><%= subject %></label>
          </li>
        <% end %>
      </ul>
    </div>

