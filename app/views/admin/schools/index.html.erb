      </div>
      <div class="col-md-12 mb10">
        {{#pre_requisite}}
          <label>Pre Requisites</label>
          <p>{{pre_requisite}}</p>
        {{/pre_requisite}}  
      </div>
      <div class="col-md-12 mb10">
        {{#details}}
          <label>Steps to follow</label>
          <p>{{details}}</p>
        {{/details}}
      </div>
      <div class="row pl15 pr15 mb10">    
          <label class="col-md-12">Thumbnail Image</label>
          {{#thumbnail_file}}  
