            </div>
          {{/thumbnail_file}}
      </div>
      <div class="row pl15 pr15">
        <label class="pl15">Reference Image</label>
        <ul class="col-md-12">
          {{#attachment}}
          <li class="col-md-4">
            <img src="{{s3_url}}">
          </li>
          {{/attachment}}
          {{^attachment}}
          <li class="col-md-4">
            <p>Reference Image Not Available</p>
          </li>
          {{/attachment}}
        </ul>
      </div>
    </div>
  {{/activity}}  
  </div>
</script>


