        <p>{{title}}</p>
      </div>
      <div class="col-md-12 mb10">
        <label>Category</label>
            <p>
            {{#category}}
              <span>{{name}}</span>
            {{/category}}
            </p>
      </div>
      <div class="col-md-12 mb10">
        {{#teaches}}
