$i: 100;
@while $i >= 0 {
  .m#{$i} { margin: $i + px; }
  .mt#{$i} { margin-top: $i + px; }
  .mb#{$i} { margin-bottom: $i + px; }
  .mr#{$i} { margin-right: $i + px; }
  .ml#{$i} { margin-left: $i + px; }
  .p#{$i} { padding: $i + px; }
  .pt#{$i} { padding-top: $i + px; }
  .pb#{$i} { padding-bottom: $i + px; }
  .pr#{$i} { padding-right: $i + px; }
  .pl#{$i} { padding-left: $i + px; }
  .plr#{$i} { padding: 0px $i + px; }
  $i: $i - 5;
}

$i: 30;
@while $i >= -30 {
  .top#{$i} { top: $i + px; }
  .bottom#{$i} { bottom: $i + px; }
  .left#{$i} { left: $i + px; }
  .right#{$i} { right: $i + px; }
  $i: $i - 5;
}

$i: 11;
@while $i <= 40 {
  .f#{$i} { font-size: $i + px; }
  $i: $i + 1;
}
$i: 14;
@while $i <= 40 {
  .lh#{$i} { line-height: $i + px; }
  $i: $i + 2;
}
$i: 100;
@while $i <= 800 {
  .fw#{$i} { font-weight: $i; }
  $i: $i + 100;
}


