@import "common";
@import "schools";
@import "admin/activities";
@import "admin/students";
@import "admin/school_profile";

.school-main-section {
  .container {
    width: 1020px;
  }
}
.schools-main-section {
  .cloud_image {
    position: relative;
    height: 55px;
    .cloud3-img {
      position: absolute;
      right: 20%;
    }
  }
}
.school-main-section, .schools-main-section{
  .container {
    margin: 50px auto;
    background: $container-background;
    padding: 40px 40px;
    border-radius: 10px;
    -webkit-box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.35);
    -moz-box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.35);
    box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.35);
    .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
      color: #555555;
      border: none;
      background-color: transparent;
      border-bottom-color: transparent;
      cursor: default;
    }
  }
  #school-Tab {
    margin-top: -110px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    border-bottom: transparent;
    li {
      height: 130px;
      width: 180px;
      &.active {
        background-image: url(<%= asset_path('admin/cloud_tab.svg') %>);
        background-repeat: no-repeat;
        height: 130px;
        width: 180px;
        a {
          margin: 25px 10px;
          color: #25aae1;
        }
      }
    }
    a {
      margin: 25px 10px;
      font-size: 18px;
      &:hover {
        text-decoration: none;
        background-color: transparent;
        border-color: transparent;
      }
    }
  }
}

.file_upload_files {
  padding: 5px 15px 20px 15px;
  &--table {
    margin-bottom: 30px;
    table-layout: fixed;
    thead {
      text-transform: uppercase;
      th {
        min-width: 150px;
        border-top: 1px solid #ddd !important;
        border-bottom: 1px solid #ddd !important;
        text-transform: capitalize;
        &.product_name {
          width: 20%;
        }
        &.file_type,
        &.file_format,
        &.file_name {
          width: 15%;
        }
        &.file_size {
          width: 10%;
        }
      }
    }
    tbody {
      td {
        font-size: 14px;
        padding-top: 9px;
        padding-bottom: 9px;
      }
    }
  }
  &--comment {
    width: 30%;
  }
  &--fileUploadBtn {
    color: #27a9e0;
    font-size: 18px;
    font-weight: normal;
    text-transform: initial;
    position: relative;
    display: inline-block;
    margin-right: 20px;
    .fa-cloud-upload {
      font-size: 26px;
      position: relative;
      top: 2px;
    }
    &:hover {
      color: #000;
    }
    input {
      display: block;
      position: absolute;
      z-index: 4;
      width: 100%;
      height: 100%;
      left: 0px;
      top: 0px;
      opacity: 0;
      cursor: pointer;
    }
  }
  &--upload-block{
    display: inline-block;
    margin-bottom: 15px;
    min-width: 300px;
    table.selected_files{
      width: 100%;
      margin: 10px 0px;

      td {
        padding: 5px 5px;
      }
      .selectedFile {
        word-break: break-all;
      }
    }

    .progressWrap {
      display: none;
      float: left;
      width: 100%;
      position: relative;

      > .progress {
        margin: 6px 0px;
      }
    }

    .errorMessage {
        color: #dd0017;
    }
  }
}

.uploadFiles_btn_container {
    display: flex;
    align-items: center;
    justify-content: center;
    .disabled {
      cursor: not-allowed !important;
      pointer-events: none !important;
      opacity: 0.65 !important;
      filter: alpha(opacity=65);
      -webkit-box-shadow: none;
      box-shadow: none;
    }
    .progressWrap {
        position: relative;
    }
    .progress {
      height: 8px;
      margin-bottom: 10px;
      width: 85%;
      .progress-bar {
          span {
            color: #666;
            position: absolute;
            z-index: 1;
            right: 10px;
            top: 15px;
          }
      }
    }
}