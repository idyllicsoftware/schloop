@import "multiselect.min";

.product-admin-dashborad {
  background-color: #caecf0;
  min-height: 100%;
  position:relative;
  .cloud-banner {
    img {
      height: 68px;
    }
    .cloud-bannr {
      margin-left: -35px;
      position: absolute;
      right: 0px;
    }
  }
  .admin-header-section {
    .schloop-logo-align {
      position: relative;
      top: -20px;
      padding-left: 20px;
    }
    .admin-profile-header {
        position: absolute;
        right: 60px;
        top: 80px;
        display: flex;
        align-items: center;
        justify-content: space-around;
        width: 14%;
        .admin-profile {
          margin-right: 10px;
          .profile-photo {
                width: 76px;
                height: 76px;
                background-color: #ece1dd;
                border-radius: 100%;
                border: 1px solid #25aae1;
          }
        }
        .admin-profile-manu {
          p{
            color: #666666;
            margin: 0px;
            &:last-child {
              color: #25aae1;
            }
          }
        }
    }
  }
  .schools-profile-section {
    margin-bottom: 50px;
    height: 100%;
    .web-content-link {
      a {
          padding: 20px;
          background-color: #fff;
          border-radius: 8px;
          margin-right: 40px;
      }
    }
    .schools-profile {
      background: url(<%= asset_path('admin/school_profile.svg') %>);
      background-repeat: no-repeat;
      background-size: 300px 260px;
      height: 260px;
      width: 300px;
      margin: 0 auto;
      margin-bottom: 30px;
      .schools-profile-active {
        position: absolute;
        right: 65px;
        top: 10px;
        width: 32px;
        height: 32px;
        border-radius: 100%;
        background-color: #25aae1;
        img {
          position: absolute;
          top: 6px;
          left: 6px;
          width: 20px;
        }
      }
      .school-profile-logo {
        position: absolute;
        top: 35px;
        right: 65px;
        .school-logo {
          width: 110px;
          height: 110px;
          background-color: rgba(37, 169, 225, 0.26);
          border-radius: 100%;
          background-repeat: no-repeat;
          background-size: 100% 100%;
        }
      }
      .school-name-code {
        position: absolute;
        top: 54px;
        width: 32%;
        left: 88px;
        h4 {
          color: #27a9e0;
          font-weight: 600;
          margin-bottom: 2px;
          width: 110px;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
        }
        p {
          color: #666666;
          font-size: 16px;
          font-weight: 300;
        }
      }
      .school-contact-info {
        position: absolute;
        top: 154px;
        left: 78px;
        font-size: 14px;
        color: #666666;
        span {
          display: flex;
          width: 210px;
          img {
            margin-right: 5px;
            margin-bottom: 5px;
            width: 25px;
            height: 25px;
          }
          p {
            margin: 0px;
            padding: 5px;
          }
        }
      }
    }
    .add_profile {
      background: url(<%= asset_path('admin/school_profile_blank.svg') %>);
      background-repeat: no-repeat;
      background-size: 300px 260px;
      height: 260px;
      width: 300px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      img {
        width: 50px;
      }
    }
  }
  .footer-img {
    position: relative;
    height: 100px;
    img {
      position: absolute;
      bottom: 50px;
    }
    .tree6-img {
      left: 45px;
      bottom: 48px;
      z-index: 1;
    }
    .tree7-img {
      left: 90px;
      bottom: 48px;
      z-index: 3;
    }
    .bag-img {
      left: 160px;
      z-index: 3;
    }
    .school-img {
      left: 270px;
      z-index: 3;
      bottom: -2;
      bottom: 46px;
    }
    .tree10-img {
      right: 150px;
      z-index: 1;
      bottom: 48px;
    }
    .scloopy-img {
      right: 600px;
      bottom: 48px;
      z-index: 1;
    }
    .bench-img {
      right: 650px;
    }
    .tree8-img {
      right: 40px;
      height: 110px;
      bottom: 48px;
      z-index: 1;
    }
    .tree9-img {
      right: 95px;
      bottom: 48px;
      z-index: 1;
    }
  }
  .oval {
    width: 160px;
    height: 80px;
    display: block;
    background: #fbf561;
    position: absolute;
    left: 82px;
    z-index: 1;
    bottom: 50px;
    border-top-left-radius: 100px;
    border-top-right-radius: 100px;
  }
  .footer-section {
    background-color: #00a255;
    height: 50px;
    bottom: 0;
    left: 0;
    position: absolute;
    right: 0;
  }
}

.schools-input-form {
  .schools-registration-form {
  	.form-group {
  	  margin-bottom: 30px;
    }
    .upload-logo {
        width: 120px;
        height: 120px;
        border-radius: 100%;
        border: 1px solid #25aae1;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
        background-size: cover;
    }
    .upload-group {
      padding-left: 26px;
      #upload-photo {
        opacity: 0;
        position: absolute;
        z-index: -1;
        width: 120px;
        -height: 120px;
      }
      p {
          color: #25aae1;
          font-size: 12px;
      }
      label {
        cursor: pointer;
      }
    }
    .action-btn {
      .add-adiministrator{
        color: #25aae1;
        cursor: pointer;
      }
      h4{
        font-size: 14px;
        color: #f17676;
      }
    }
  }
}

#create-web-content-modal {
  .col-md-12 {
    padding-left: 20px;
    padding-right: 20px;
  }
  .textarea-pre {
    height: 110px;
    resize: none;
  }
  .textarea-detail {
    height: 150px;
    resize: none;
  }
  p{
    font-weight: bold;
    color: #666666;
  }
  .image-attach{
    #upload-photo {
      opacity: 0;
      position: absolute;
      z-index: -1;
      width: 120px;
      -height: 120px;
    }
    label {
        float: right;
        cursor: pointer;
    }
  }
}
.show_err, .show_error {
  color: red;
  font-size: 12px;
  padding-top: 10px;
}
