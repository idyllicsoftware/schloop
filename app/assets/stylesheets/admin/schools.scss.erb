@import "multiselect.min";

.product-admin-dashborad {
  background-color: #caecf0;
  min-height: 100%;
  position:relative;
  .cloud-banner {
    img {
      height: 68px;
    }
    .cloud-bannr {
      margin-left: -35px;
      position: absolute;
      right: 0px;
    }
  }
  .admin-header-section {
    .schloop-logo-align {
      position: relative;
      top: -20px;
      padding-left: 20px;
    }
    .admin-profile-header {
        position: absolute;
        right: 0px;
        top: 80px;
        display: inline-flex;
        width: 19%;
        .admin-profile {
          margin-right: 10px;
          .profile-photo {
              width: 70px;
              height: 70px;
              border-radius: 100%;
              background-color: #25aae1;
              display: flex;
              justify-content: center;
              align-items: center;
              color: #fff;
              font-size: 30px;
              font-weight: 300;
          }
        }
        .admin-profile-manu {
          p{
            color: #666666;
            margin: 0px;
          }
        }
    }
  }
  .schools-profile-section {
    margin-bottom: 50px;
    height: 100%;
    .web-content-link {
      a {
          padding: 20px;
          background-color: #fff;
          border-radius: 8px;
          margin-right: 40px;
      }
    }
    .schools-profile {
      background: url(<%= asset_path('admin/school_profile.svg') %>);
      background-repeat: no-repeat;
      background-size: 330px 260px;
      height: 260px;
      width: 330px;
      margin: 0 auto;
      margin-bottom: 30px;
      .schools-profile-active {
        position: absolute;
        right: 35px;
        top: 10px;
        width: 32px;
        height: 32px;
        border-radius: 100%;
        background-color: #25aae1;
        img {
          position: absolute;
          top: 6px;
          left: 6px;
          width: 20px;
        }
      }
      .school-profile-logo {
        position: absolute;
        top: 25px;
        right: 50px;
        .school-logo {
          width: 120px;
          height: 120px;
          background-color: rgba(37, 169, 225, 0.26);
          border-radius: 100%;
          background-repeat: no-repeat;
          background-size: 100% 100%;
        }
      }
      .school-name-code {
        position: absolute;
        top: 54px;
        width: 34%;
        left: 70px;
        h4 {
          color: #27a9e0;
          font-weight: 300;
          font-size: 18px;
          margin-bottom: 2px;
          width: 125px;
          white-space: nowrap;
          text-overflow: ellipsis;
          overflow: hidden;
        }
        p {
          color: #666666;
          font-size: 15px;
          font-weight: 300;
        }
      }
      .school-contact-info {
        position: absolute;
        top: 160px;
        left: 70px;
        font-size: 14px;
        color: #666666;
        span {
          display: flex;
          width: 230px;
          padding-bottom: 5px;
          img {
            margin-right: 5px;
            margin-bottom: 5px;
            width: 25px;
            height: 25px;
          }
          p {
            margin: 0px;
            padding-left: 5px;
            padding-top: 2px;
          }
        }
      }
    }
    .add_profile {
      background: url(<%= asset_path('admin/school_profile_blank.svg') %>);
      background-repeat: no-repeat;
      background-size: 330px 260px;
      height: 260px;
      width: 330px;
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      img {
        width: 50px;
      }
    }
  }
}

.schools-input-form {
  .schools-registration-form {
  	.form-group {
  	  margin-bottom: 30px;
    }
    .upload-logo {
        width: 120px;
        height: 120px;
        border-radius: 100%;
        border: 1px solid #25aae1;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
        background-size: cover;
    }
    .upload-group {
      padding-left: 26px;
      #upload-photo {
        opacity: 0;
        position: absolute;
        z-index: -1;
        width: 120px;
        -height: 120px;
      }
      p {
          color: #25aae1;
          font-size: 12px;
      }
      label {
        cursor: pointer;
      }
    }
    .action-btn {
      .add-adiministrator{
        color: #25aae1;
        cursor: pointer;
      }
      h4{
        font-size: 14px;
        color: #f17676;
      }
    }
  }
}
.close-school-form {
    position: absolute;
    right: 20px;
    top: 15px;
    font-size: 22px;
    font-weight: 300;
    color: #25aae1;
    cursor: pointer;
}

#create-web-content-modal {
  .close-activity-form {
    position: absolute;
    right: 20px;
    top: 15px;
    font-size: 22px;
    font-weight: 300;
    color: #25aae1;
    cursor: pointer;
  }
  .col-md-12 {
    padding-left: 20px;
    padding-right: 20px;
  }
  .textarea-pre {
    height: 110px;
    resize: none;
  }
  .textarea-detail {
    height: 150px;
    resize: none;
  }
  p{
    font-weight: bold;
    color: #666666;
  }
  .image-attach{
    #upload-photo {
      opacity: 0;
      position: absolute;
      z-index: -1;
      width: 120px;
      -height: 120px;
    }
    label {
        float: right;
        cursor: pointer;
    }
  }
}
.show_err, .show_error {
  color: red;
  font-size: 12px;
  padding-top: 10px;
}
#changePasswordModal {
  .modal-body {
    padding: 20px;
    .close-changepass-form{
      position: absolute;
      right: 15px;
      top: 5px;
      color: #25aae1;
      font-size: 22px;
      cursor: pointer;
    }
    .centre-content {
      margin: 0px auto;
    }
    .btn-full-width {
      width: 100%;
    }
  }

}