@import "common";
@import "includes/variables";

.teacher-schloopmarking-main-section {
	padding-bottom: 100px;
	min-height: 442px; 
	max-height: 100%;
	.cloud_image {
	    height: 55px;
	    position: absolute;
	    right: 14%;
	    top: 150px;
	}
	.container {
		width: 1000px;
	    margin: 30px auto;
	    background: $container-background;
	    padding: 40px 40px;
	    border-radius: 10px;
	    -webkit-box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.35);
	    -moz-box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.35);
	    box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.35);
	    .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
	      color: #555555;
	      border: none;
	      background-color: transparent;
	      border-bottom-color: transparent;
	      cursor: default;
	    }
	}
	#schloopmarking-Tab {
	    margin-top: -110px;
	    display: flex;
	    align-items: center;
	    justify-content: center;
	    text-align: center;
	    border-bottom: transparent;
	    li {
	      height: 130px;
	      width: 180px;
	      &.active {
	        background-image: url(<%= asset_path('admin/cloud_tab.svg') %>);
	        background-repeat: no-repeat;
	        height: 130px;
	        width: 180px;
	        a {
	          margin: 25px 10px;
	          color: #25aae1;
	        }
	      }
	    }
	    a {
	      margin: 25px 10px;
	      font-size: 18px;
	      font-weight: 600;
	      &:hover {
	        text-decoration: none;
	        background-color: transparent;
	        border-color: transparent;
	      }
	    }
	}
	#my-topics {
		.sidebar {
			.select-filter-tag-section {
				padding: 20px 0px;
				span {
					    font-weight: 600;
					    cursor: pointer;
					a {
						color: #666666;
					    font-size: 14px;
					}
					i {
				    	padding-left: 10px;
	    				color: #25aae1;
					}
					a:hover {
					    	color: #666666 !important;
					    }
					.popover { 
						left: 120.8594px !important;
						width: 450px; 
						.grade-selection {
							.radio_customized {
								padding: 0px;
		    					list-style: none;
		    					label {
		    						color: #666666;
		    						font-weight: 300;
		    					}
		    					.select-label {
		    						color: #25aae1;
		    						font-weight: 300;
		    					}
							}
						}
						input[type="radio"]:not(:checked),
								input[type="radio"]:checked {
								  position: absolute;
								  left: -9999px;
								}
								input[type="radio"]:not(:checked) + label {
								  position: relative;
								  cursor: pointer;
								}
								input[type="radio"]:checked + label {
								  position: relative;
								  cursor: pointer;
								  color: #25aae1;
								  font-weight: bold;
								}

								input[type="radio"]:not(:checked) + label:before ,
								input[type="radio"]:checked + label:before {
								  content: '';
								  position: absolute;
								  left: 0px; 
								  top: 2px;
								  width: 70px;
								  height: 15px;
								}
								input[type="radio"]:checked + label:before {
									border: none;
								}
								input[type="radio"]:not(:checked) + label:after,
								input[type="radio"]:checked + label:after {
									content: '';
								    position: absolute;
								    top: 2px;
								    left: 0px;
								    width: 70px;
								    height: 15px;
								}
								input[type="radio"]:not(:checked) + label:after {
								  opacity: 0;
								  transform: scale(0);
								}
								input[type="radio"]:checked + label:after {
								  opacity: 1;
								  transform: scale(1);
								}
					}
					.popover-content {
						padding: 0px;
					}
					.popover.bottom > .arrow {
						left: 8% !important;
					}    
				}
			}
			.nav > li > a {
				color: #666666;
				&:hover {
					background-color: #def1f0;
					color: #666666 !important;
					font-weight: 600;
				}
			}
			.new-topic {
				a {
					padding: 10px;
		    		font-weight: 600;
				}
			}
		}
		.topics-view-section {
			.create-topic-content {
				padding-bottom: 20px;
			    border-bottom: 1px solid #25aae1;
			    height: 100%;
			    display: inline-block;
			    width: 100%;
				.content-editor-section {
					border: 1px solid #ccc;
				    border-radius: 4px;
				    height: 100%;
				    color: #999999;
				    padding: 10px;
					.content-editor {
						    min-height: 20px;
						    max-height: 100%;
						    color: #dddddd;
						    width: 80%;
						    &:focus {
						    	outline: none;
						    }
					}
					[contenteditable=true]:empty:before{
					  content: attr(placeholder);
					  display: block; 
					}
					button {
						    background: transparent;
						    border: 0px;
						    color: #dddddd;
						    float: right;
						    font-weight: bold;
						    &:focus {
						    	outline: none;
						    }
					}
				}
				.content-editor-section:focus {
					border: 1px solid #25aae1;
					outline: none;
				} 
			}
			.topics-list-section {
				margin-top: 15px;
				border-bottom: 1px solid #c6c6c6;
				.title-of-topic {
					padding: 10px 20px;
					background-color: #f9f8eb;
    				display: flex;
					.created-by-teacher-img {
					    width: 60px;
					    height: 60px;
					    border-radius: 100%;
					    background-color: rgba(37, 169, 225, 0.26);
					    background-repeat: no-repeat;
					    background-size: 100% 100%;
					}
					.created-by-teacher-detail {
						padding: 5px 20px;
						p {
							margin: 0px;
						}
						span {
							color: #cacaca;
						}
					}
				}
				.content-of-topic {
					.content-caption-section {
						.input-form-group {
							border-bottom: 1px solid #dadada;
							width: 100%;
							padding-top: 10px;
							.caption-field {
								background: transparent;
							    padding: 5px;
							    border: 0px;
							    width: 90%;
							    &:focus {
							    	outline: 0;
							    }
							}
							button {
								background: transparent;
							    border: none;
							    color: #cacaca;
							    font-weight: bold;
							    float: right;
    							padding: 5px;
							}
						}
					}
					.content-view-section {
						height: 100%;
						margin: 10px 0px;
					}
					.share-topic-section {
						display: flex;
   						padding: 10px;
						.share-topic {
						    display: flex;
						    justify-content: space-around;
						    width: 27%;
						    margin-right: 20px;
						    a {
						    	padding: 10px 0px;
						    }
						}
						.share-followup {

						}
					}
				}
			}
		}	
	}	
}	

#add-topic-modal {
	.modal-body {
		padding: 30px;
		.input-form-group {
			border-bottom: 1px solid #dadada;
			width: 100%;
			padding-top: 10px;
			.caption-field {
				background: transparent;
			    padding: 5px;
			    border: 0px;
			    width: 90%;
			    &:focus {
			    	outline: 0;
			    }
			}
		}
	}	
}