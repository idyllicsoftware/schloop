@import "common";
@import "includes/variables";

.teacher-schloopmarking-main-section {
	.cloud_image {
	    height: 55px;
	    position: absolute;
	    right: 14%;
	    top: 150px;
	}
	.container {
		width: 1000px;
	    margin: 30px auto;
	    background: $container-background;
	    padding: 40px 40px;
	    border-radius: 10px;
	    -webkit-box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.35);
	    -moz-box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.35);
	    box-shadow: 1px 1px 4px 0px rgba(0, 0, 0, 0.35);
	    .nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
	      color: #555555;
	      border: none;
	      background-color: transparent;
	      border-bottom-color: transparent;
	      cursor: default;
	    }
	}
	#schloopmarking-Tab {
	    margin-top: -110px;
	    display: flex;
	    align-items: center;
	    justify-content: center;
	    text-align: center;
	    border-bottom: transparent;
	    li {
	      height: 130px;
	      width: 180px;
	      &.active {
	        background-image: url(<%= asset_path('admin/cloud_tab.svg') %>);
	        background-repeat: no-repeat;
	        height: 130px;
	        width: 180px;
	        a {
	          margin: 25px 10px;
	          color: #25aae1;
	        }
	      }
	    }
	    a {
	      margin: 25px 10px;
	      font-size: 18px;
	      font-weight: 600;
	      &:hover {
	        text-decoration: none;
	        background-color: transparent;
	        border-color: transparent;
	      }
	    }
	}
	.select-filter-tag-section {
		padding: 20px 0px;
		span {
			    font-weight: 600;
			a {
				color: #666666;
			    font-size: 14px;
			    i {
			    	padding-left: 20px;
    				color: #25aae1;
			    }
			}
			a:hover {
			    	color: #666666;
			    }
			.popover { 
				left: 120.8594px !important; 
			}
			.popover.bottom > .arrow {
				left: 14% !important;
			}    
		}
	}
	.nav > li > a {
		color: #666666;
		&:hover {
			background-color: #def1f0;
			color: #666666 !important;
			font-weight: 600;
		}
	}
	.new-topic {
		a {
			padding: 10px;
    		font-weight: 600;
		}
	}
}	