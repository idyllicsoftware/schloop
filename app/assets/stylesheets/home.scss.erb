.main-page-section-wrap {
	position: relative;
	color: #ffffff;
	overflow: hidden;
	.logo-header-section {
		position: absolute;
	    left: 0px;
	    top: 15px;
	    width: 100%;
	    z-index: 10;
	    text-align: center;
	    .logo-header-inner {
	    	width: 400px;
    		margin: 0 auto;
    		padding: 0px 20px;
    		p {
			    font-size: 20px;
			    font-weight: 600;
			    margin-top: 15px;
    		}
	    }
	}
	.main-body-wrap {
		display: flex;
    	height: 800px;
    	overflow: hidden;
    	position: relative;
    	.col-wrap {
    		width: 33.33%;
    		display: flex;
		    flex-direction: column;
		    justify-content: center;
		    align-items: center;
    	}
    	.btn-custom {
    		font-size: 14px;
    		font-weight: bold;
    		color: #ffffff;
    		display: flex;
    		align-items: center;
    		justify-content: center;
    	}
    	.btn-primary-custom {
    		width: 160px;
		    height: 40px;
		    object-fit: contain;
		    background: transparent;
		    border-radius: 8px;
		    outline: none;
		    border: solid 2px #ffffff;
		    &:hover, &:active, &:focus {
		    	border: 2px solid #27a9e0;
			    color: #27a9e0 !important;
		    }
    	}
    	.store-btn-section {
    		p {
    			width: 100%;
    			margin: 0px;
    			font-weight: 600;
    		}
    		img {
    			margin: 5px;
    		}
    	}
    	p {
    		font-size: 16px;
    		text-align: center;
    		width: 60%;
    		margin-bottom: 20px;
    	}
    	h3 {
    		font-size: 25px;
    		font-weight: 600;
    	}
    	.pa {
    		position: absolute;
		    bottom: -1px;
		    z-index: 3;
    	}
		.schools-signin-section {
			background: linear-gradient(#03CED2, #FFFFBB);
			position: relative;
			.left-trees {
				left: 10px;
			}
			.alarm_clock {
				width: 46px;
    			height: 45px;
			}
			.school-img  {
				width: 300px;
    			right: -135px;
			}
			.oval {
			    width: 140px;
			    height: 70px;
			    display: block;
			    background: #fbf561;
			    left: 110px;
			    bottom: 0px;
			    z-index: 0;
			    border-top-left-radius: 100px;
			    border-top-right-radius: 100px;
			}
			.balloon {
			    animation: fly ease-out 20s infinite;
				position: absolute;
			    left: 20px;
			    bottom: 225px;
			}
			@keyframes fly {
			  0% {
			     transform: translate(0, 0);
			  }
			  50% {
			  	transform: translate(0, 50px);
			  }
			  100% {
			  	transform: translate(0px, 0);
			  }
			}
 		}
		.teachers-signin-section {
			background: linear-gradient(#72cadc, #E9FCFF);
			position: relative;
			z-index: 2;
			.bulb {
				width: 35px;
			    -webkit-transform: rotate(24deg);
			    transform: rotate(24deg);
			    left: 42%;
			    right: 50%;
			    bottom: -3px;
			}
			.center-trees {
				left: 45%;
    			right: 50%;
			}
			.bench {
				right: 10%;
			}
			.cup {
				right: 2%;
			}
		}
		.parents-link-section {
			background: linear-gradient(#27184B, #402363);
			position: relative;
			.rotate {
				position: absolute;
				z-index: 0;
				top: 400px;
				left: -150px;
				display: flex;
				animation: nigth ease-out 35s infinite;
			    align-items: flex-end;
			    width: 200%;
				height: 130px;
			}
			.satellite {
				position: absolute;
				z-index: 1;
			}
			@keyframes nigth {
			  0% {
			  	 transform: rotate(30deg);
			  }
			  100% {
			  	transform: rotate(130deg);
			  }
			}
			.ball {
				left: 2%;
			}
			.globe {
				left: 32%;
			}
			.books {
				right: 30%;
			}
			.rigth-trees {
				right: 10px;
			}
			.stars {
				position: absolute;
				width: 80%;
    			left: 10%;
    			z-index: 0;
				top: 20px;
				right: 10px;
				height: 222px;
			}
		}		
	}
	.slide {
		position: absolute;
	    top: 0px;
	    left: 0px;
	    width: 100%;
	    height: 35%;
	    z-index: 3;
	    overflow: hidden;
	    -webkit-animation: infinite;
	    -webkit-animation-name: sky;
	     animation-delay: 0s;
	    -webkit-animation-duration: 40s;
	    animation-timing-function: linear;
		.pas {
			position: absolute;
			z-index: 1;
		}
		.cloud-1 {
			width: 6%;
			left: 30px;
		    top: 200px;
		}
		.cloud-2 {
			top: 40px;
			width: 133px;	
			left: 200px;
		}
		.cloud-3 {
			top: 80px;
		    width: 80px;
		    left: 35%;
		}
		.cloud-4 {
			width: 66px;
		    top: 120px;
		    right: 34%;
		}
		.cloud-5 {
    		top: 60px;
    		right: 20%;
		}
		.cloud-6 {
    		top: 200px;
    		right: 35px;
		}
		.cloud-7 {
			width: 6%;
    		top: 200px;
    		left: 100% + 3%;
    	}
    	.cloud-8 {
    		top: 40px;
			width: 133px;	
    		left: 100% + 16%;
    	}
    	.cloud-9 {
    		top: 80px;
		    width: 80px;
    		left: 100% + 35%;
    	}
    	.cloud-10 {
    		width: 66px;
		    top: 120px;
    		left: 100% + 60%;
    	}
    	.cloud-11 {
    		top: 60px;
    		left: 100% + 70%;
    	}
    	.cloud-12 {
    		top: 200px;
    		left: 100% + 86%;
    	}		
	}
	@keyframes sky {
		0% {
			left: 0%;
			overflow: visible;
		}
		50% {
			overflow: visible;
		}
		100% {
			left: - 100%;
			overflow: visible;
		}
	}
}
.vertical-alignment-helper {
  display:table;
  height: 100%;
  width: 100%;
  pointer-events:none;
}
.vertical-align-center {
  /* To center vertically */
  display: table-cell;
  vertical-align: middle;
  pointer-events:none;
}
.centre-content{
  margin: 0px auto;
}
.close-login-form {
	position: absolute;
    right: 15px;
    top: 5px;
    color: #25aae1;
    font-size: 22px;
    cursor: pointer;	
}
.btn-full-width {
  width: 100% !important;
}

.modal-body {
  border-radius: 8px;
  background-color: #fffef4;
  padding: 20px;
}

.text-color {
  font-weight: bold;
  color: #27a9e0 !important;
}
.show_err, .show_error {
	color: red;
	font-size: 12px;
	padding-top: 10px;
}

.login-input-form {
  form {
    label {
      color: #666666;
      margin-bottom: 10px;
    }
    .form-group {
      margin-bottom: 30px;
      .input-field {
        background: transparent;
        box-shadow: none;
        border: 0;
        border-bottom: 1px solid #ccc;
        border-radius: 0;
        font-size: 14px;
        outline: 0;
        padding: 0;
        margin-bottom: 10px;
        &:focus {
          border-color: #66afe9;
        }
      }
    }
    .sub-input-field {
      display: flex;
      justify-content: space-between;
      .line-fix {
        width: 120px;
      }
    }
  }
}
.admin-login-section {
	background-color: #caecf0;
	.admin-login-header { 
		display: flex; 
		height: 575px;
		justify-content: center; 
		align-items: center; 
		flex-direction: column; 
		input:-webkit-autofill {
			background-color: none;
		}
		input {
			background-color: none;
		}
		.inside {
			width: 350px;
    		padding: 20px;
    		background-color: #fffef4;
    		box-shadow: 2px 2px 8px 0 rgba(170, 170, 170, 0.5);
    		border-radius: 4px;
		}
		form {
		    margin-bottom: 20px;
		}
	}	
	.admin-login-footer {
		height: 100px;
		width: 100%;  
		background-color: #00a255;
	}
}
